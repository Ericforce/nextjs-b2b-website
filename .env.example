# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Sanity CMS Configuration
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your_api_token

# Email Provider Configuration (Resend recommended)
EMAIL_FROM=noreply@yourdomain.com
CONTACT_EMAIL_RECIPIENT=contact@yourdomain.com
EMAIL_PROVIDER_API_KEY=your_resend_api_key
# For Resend, get your API key from https://resend.com/api-keys
# RESEND_API_KEY is an alias for EMAIL_PROVIDER_API_KEY

# Optional: SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
