# Sanity Configuration
# Get these values from your Sanity project at https://sanity.io/manage
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Sanity API Token
# Create a token in Sanity project settings -> API -> Tokens
# Use a read token for development, write token for mutations
SANITY_API_TOKEN=your_sanity_token

# Sanity Webhook Secret
# Generate a random string: openssl rand -base64 32
# This must match the secret in your Sanity webhook configuration
SANITY_REVALIDATE_SECRET=your_random_secret_string

# Sanity Preview Secret (optional)
# For draft content preview functionality
SANITY_PREVIEW_SECRET=your_preview_secret

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Your Site Name

# Email Provider Configuration
# Choose one: resend, sendgrid, postmark, smtp
EMAIL_PROVIDER=resend
EMAIL_PROVIDER_API_KEY=your_email_api_key
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_TO_ADDRESS=contact@yourdomain.com

# SMTP Configuration (if using EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password

# Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Environment
NODE_ENV=development

# Debug Mode (optional)
DEBUG=false
NEXT_PUBLIC_DEBUG=false
